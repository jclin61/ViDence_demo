<h1>Videos#index</h1>
<p>Find me in app/views/videos/index.html.erb</p>
<% if flash[:message] %>
	<p><%= flash[:message] %></p>
<% end %>
<% if !signed_in? %>
<%= render 'shared/login', :@user => User.new  %>
<span> or </span>
<%= link_to 'Register', new_user_path %>
<% end %>
<% if signed_in? %>
<%= link_to 'Log out', session_path(current_user), method: "delete" %>
<p><%= link_to 'My Profile', "/users/#{session[:user_id]}/" %></p>
<% if current_user.user_level == 9 %>
<p><%= link_to 'Admin Page', users_path %></p>
<% end %>
<% end %>
<h3><%= link_to 'Add New Video', new_video_path %></h3>



<h3>Video List</h3>
<% @videos.each do |video| %>
	<div class="col-md-3">
		<h6><%= video.title %></h6>
		<p><%= video.description %></p>
		<%= raw(youtube_embed(video.link)) %>
		<p>Submitted by <%= User.find(video.user_id).username %></p>
		<p>Video Location: <%= video.location %></p>
	</div>

	<p><%= link_to 'Comments', video %></p>
<% end %>