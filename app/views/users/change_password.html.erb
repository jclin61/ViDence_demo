<% if flash[:message] %>
	<p><%= flash[:message] %></p>
<% end %>
<% if flash[:errors] %>
	<% flash[:errors].each do |error| %>
		<p><%= error %></p>
	<% end %>
<% end %>

<%= simple_form_for @user do |f| %>	
	<%= f.input :password %>
	<%= f.input :password_confirmation %>
	<%= f.button :submit, value: 'Update Password' %>
<% end %>