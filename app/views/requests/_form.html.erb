<%= simple_form_for(@request) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :user_id, as: :hidden, input_html: {value:  session[:user_id]} %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :contact %>
    <%= f.input :location %>
  </div>
<br>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
